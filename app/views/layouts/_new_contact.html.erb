<%= form_for @contact do |f| %>
<% if @contact.errors.any? %>
<div id="errors">
	<h2><%= pluralize(@contact.errors.count, "error") %> prevented this contact from saving</h2>
	<ul>
		<% @contact.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
			</ul>
</div>
<% end %>
<p>
<%= f.label :name %><br>
<%= f.text_field :name %>
</p>

<p>
  <%= f.label :number %><br>
  <%= f.text_field :number %>
</p>
<p>
  <%= f.label :email %><br>
  <%= f.text_field :email, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
</p>
<p>
  <%= f.label :"how did you come to know about us" %><br>
  <%= f.text_area :how %>
</p>
<p>
  <%= f.label :message %><br>
  <%= f.text_area :message %>
</p>
<p>
  <%= f.submit "Submit" %>
</p>

<% end -%>
